@model  _V2__OnlineVideoCourseWebstie.Models.ViewModels.CourseViewModel
@using _V2__OnlineVideoCourseWebstie.Models 

@{
    ViewData["Title"] = "Details";
}

<div class="row small-bottom-margin">
    <div class="col-sm-12">
        <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Index">
           <span class="vertical-align">Back to Dashboard</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-12">
        <div class="card no-border-radius">
            <div class="marquee" style="background-image:url('@Model.Course.MarqueeImageUrl');">
                <img src="@Model.Course.ImageUrl">
            </div>
            <div class="card-body">
                <h1 class="card-title">@Model.Course.Title</h1>
                <h4 class="card-text">
                    @Model.Course.Description
                </h4>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-9">
        @*Add modules here*@
        @foreach (var topic in Model.Topics)
        {
            <div class="card small-top-margin no-border-radius">
                <div class="card-body">
                    <h5>@topic.Title</h5>
                </div>
                <hr class="no-margin">
                @if (topic.TopicVideos != null && topic.TopicVideos.Count > 0)
                {
                    @foreach (var topicVideo in topic.TopicVideos){
                        <partial name="_TopicVideosPartial" model=@topicVideo.Video />
                    }
                }

                @if (topic.Resources != null && topic.Resources.Count > 0)
                {

                    <hr class="no-margin">
                    <div class="card-body no-bottom-padding">
                        <h5>Resources</h5>
                    </div>
                    <div class="card-body no-top-padding">
                        <partial name="_ModuleDownloadsPartial" model="@topic.Resources" />
                    </div>
                }
            </div>
        }
    </div>
    @*<div class="col-md-3">
        @*Add instructor bio here
        @if (Model.Instructor != null)
        {
            <partial name="_InstructorBioPartial" model="@Model.Instructor" />
        }
    </div>*@
</div>