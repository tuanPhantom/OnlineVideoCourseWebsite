@model OnlineVideoCourseWebsite.Models.ViewModels.VideoViewModel

<div class="card no-border-radius">
    @if (Model.Video.URL != null)
    {
        <div class="video-player">
            <iframe src="@Model.Video.URL.Replace("https://www.youtube.com/watch?v=","https://www.youtube.com/embed/")" title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
        </div>
    }
    <div class="card-body">
        <h2>@Model.Video.Title</h2>
        <p class="text-muted">
            Suggested study: @Model.Video.Duration hour(s) per week
        </p>
        <div class="video-course">
            <img src="@Model.Course.ImageUrl">
            <span class="vertical-align text-large">@Model.Course.Title</span>
        </div>
    </div>
    <hr class="no-margin">
    <div class="card-body">
        @Model.Video.Description
    </div>
</div>
