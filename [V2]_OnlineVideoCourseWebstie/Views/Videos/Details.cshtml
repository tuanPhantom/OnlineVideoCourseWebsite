@model _V2__OnlineVideoCourseWebstie.Models.ViewModels.VideoViewModel

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Video</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Duration)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video.Duration)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video.Thumbnail)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video.Thumbnail)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Video.URL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Video.URL)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Video.VideoId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>



@*me edit*@
<div class="row small-bottom-margin">
    <div class="col-sm-12">
        <a class="btn btn-primary no-border-radius no-left-padding" asp-action="Course" asp-route-id="@Model.Course.CourseId">
            <i class="material-icons vertical-align no-left-margin">keyboard_arrow_left</i><span class="vertical-align">Back to @Model.Course.Title</span>
        </a>
    </div>
</div>

<div class="row">
    <div class="col-sm-9">
        @*Place the video player here*@
        @if (Model != null && Model.Video != null && Model.Course != null)
        {
            <partial name="_VideoPlayerPartial" model="@Model" />
        }
    </div>
</div>


