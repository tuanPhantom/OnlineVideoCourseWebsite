@model OnlineVideoCourseWebsite.Models.Enrollment

@{
    ViewData["Title"] = "Create";
}

<h1>Course: @TempData["courseName"]</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="CourseOffering" class="control-label"></label>
                <select asp-for="CourseOfferingId" class ="form-control" asp-items="ViewBag.CourseOfferingId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Enroll" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a href="/">Back</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
